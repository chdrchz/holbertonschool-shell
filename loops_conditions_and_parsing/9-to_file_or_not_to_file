#!/usr/bin/env bash
#if statement for listing file information
if [ -e 'school' ]; then
	echo 'school file exists'
	if [ -s 'school' ]; then
		echo 'school is not empty'
	else 
		echo 'school is empty'
	fi
	if [ -f 'school' ]; then
		echo 'school is a regular file'
	fi
else 
	echo 'school file does not exist'
fi
